        <!--搜索-->
        <Grid Grid.Row="0">
            <ui:TextBox 
            Icon="Search12" 
            PlaceholderText="请输入关键字"
            Text="{Binding Path=ViewModel.InputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            IconPlacement="Right" Margin="110,6,110,0" VerticalAlignment="Top">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding ViewModel.InputCommand}" />
                </TextBox.InputBindings>
            </ui:TextBox>
        </Grid>
        <ScrollViewer Grid.Row="1" Margin="10,4,0,0">
            <ListBox ItemsSource="{Binding ViewModel.SearchNodes}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Height="300" Width="160">
                            <ui:Card >
                                <StackPanel>
                                    <Image
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="{Binding CoverImage}" />
                                    <TextBlock
                            Grid.Row="0"
                            Margin="0,5"
                            FontSize="10"
                            FontWeight="Bold"
                            TextWrapping = "Wrap"            
                            Text="{Binding display_title}" />
                                </StackPanel>
                            </ui:Card>
                        </Border>

                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </ScrollViewer>

