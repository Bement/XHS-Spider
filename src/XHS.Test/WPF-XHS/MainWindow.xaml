<Window xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"  x:Class="WPF_XHS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_XHS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button Content="测试" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Click="test_click" Height="36" Width="79"/>
            <Button Content="搜索测试" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Click="testSearch_click" Height="36" Width="79"/>
            <Button Content="二维码" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Click="qrcode_click" Height="36" Width="79"/>
            <Button Content="当前用户" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Click="currentUser_click" Height="36" Width="79"/>

            <Image
            Name="nameLoginQRCode"
            Grid.Row="2"
            Width="200"
            Height="200"
            Source="{x:Null}" />
        </DockPanel>

        <Wpf:WebView2
            x:Name="webView"
        />
    </DockPanel>
</Window>
